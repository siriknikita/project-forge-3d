<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for localhost -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">::1</domain>
    </domain-config>
    
    <!-- Allow cleartext traffic for private IP addresses -->
    <!-- Note: Android doesn't support IP ranges in domain-config, so we allow cleartext -->
    <!-- for all connections. For production, consider using HTTPS or restricting this further. -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>

